<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="2dp"
    android:paddingEnd="10dp"
    android:paddingBottom="2dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="步骤一："
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/buzhou_1"

                android:text="每点击\'①增加\'按钮,都会出现一个靶子"
                android:singleLine="true"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="步骤二："
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/buzhou_2"
                android:layout_span="2"
                android:text="拖动靶子到各个解锁数字的位置:
                \n一般只需要数字1,5,9的位置坐标即可"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="步骤三："
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/buzhou_3"
                android:text="点击\'②保存\'按钮,会自动保存该位置的坐标"
                android:singleLine="true"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="坐标点："
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_position_info"
                android:layout_span="2"
                android:hint="显示坐标信息"
                android:singleLine="true"
                android:ellipsize="middle"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="①增加"
            android:textColor="@color/blackxpq"
            android:textSize="12sp" />
        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="②保存"
            android:textColor="@color/blackxpq"
            android:textSize="12sp" />

        
        <Button
            android:id="@+id/button_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="③退出"
            android:textColor="@color/blackxpq"
            android:textSize="12sp" />


    </LinearLayout>
</LinearLayout>